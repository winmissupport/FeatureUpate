@model AutoOrderShippingAddressViewModel
@{
    ViewBag.Title = Resources.Common.AutoOrders;
}


<h2>@ViewBag.Title</h2>

<div id="view-accountoverview">
    <div class="row">
        <div class="col-sm-12">
            <div id="view-editshippingaddress">
                @if (Model != null && Model.Addresses.Count() > 0)
                {
                    <h3>@Resources.Common.SelectShippingAddress</h3>

                    <div class="row">
                        @foreach (var address in Model.Addresses)
                        {
                            <div class="col-sm-4">
                                @using (Html.BeginForm())
                                {
                                    @Html.DisplayFor(c => address, "ShippingAddress")

                                    @Html.EditorFor(c => address, "ShippingAddressOnFile")

                                    <div class="space-10"></div>
                                    <button type="submit" class="btn btn-primary">@Resources.Common.ShipToThisAddress</button>
                                }
                            </div>


                        }
                    </div>
                    <div class="space-50"></div>
                    <hr />
                    <div class="space-30"></div>
                    <h3>@Resources.Common.OrEnterNewAddress</h3>
                }
                else
                {
                    <h3>@Resources.Common.AddNewAddress</h3>
                }

                <div class="row">
                    <div class="col-sm-9">
                        @using (Html.BeginForm())
                        {
                            var Address = new ShippingAddress();
                            @Html.EditorFor(c => Address, "ShippingAddress")

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">@Resources.Common.ShipToThisAddress</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>