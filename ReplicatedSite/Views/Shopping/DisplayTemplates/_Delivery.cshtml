@model CheckoutViewModel

<div class="checkout-delivery active">
    <div class="delivery-options">
        <h5><strong>Choose delivery option below</strong></h5>
        <div id="shipmethods">
            @using (Html.BeginForm("setshipmethodid"))
            {
                foreach (var shipMethod in Model.ShipMethods.OrderBy(c => c.Price))
                {
                    <div class="radio">
                        <label for="shipping-address" class="checkbox">
                            @Html.RadioButton("ShipMethodID", shipMethod.ShipMethodID, shipMethod.Selected)
                            @shipMethod.ShipMethodDescription <small class="text-muted">@shipMethod.Price.ToString("C")</small>
                        </label>
                    </div>
                    <div class="space-20"></div>
                }
            }
        </div>
        <div class="clearfix"></div>
        <div class="space-20"></div>
        <a href="@Url.Action("Continue", "Shopping", new { step = "review" })" class="continue button color">Continue</a>





