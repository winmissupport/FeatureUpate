                            <div class="arrow-comment"></div>
                            <div class="comment-by">
                                <strong>John Doe</strong><span class="date">February 1, 2015</span>
                                <div class="rating four-stars"><div class="star-rating"></div><div class="star-bg"></div></div>
                            </div>
                            <p>Product review text.</p>
                        </div>

                    </li>
                </ul>

                <a href="#small-dialog" class="popup-with-zoom-anim button color">Add Review</a>

                <div id="small-dialog" class="zoom-anim-dialog mfp-hide">
                    <h3 class="headline">Add Review</h3><span class="line margin-bottom-25"></span><div class="clearfix"></div>

                    <!-- Form -->
                    <form id="add-comment" class="add-comment">
                        <fieldset>

                            <div>
                                <label>@Resources.Common.Name:</label>
                                <input type="text" value="" />
                            </div>

                            <div>
                                <label>@Resources.Common.Rating:</label>
                                <span class="rate">
                                    <span class="star"></span>
                                    <span class="star"></span>
                                    <span class="star"></span>
                                    <span class="star"></span>
                                    <span class="star"></span>
                                </span>
                                <div class="clearfix"></div>
                            </div>

                            <div class="margin-top-20">
                                <label>@Resources.Common.Email: <span>*</span></label>
                                <input type="text" value="" />
                            </div>

                            <div>
                                <label>@Resources.Common.Review: <span>*</span></label>
                                <textarea cols="40" rows="3"></textarea>
                            </div>

                        </fieldset>

                        <a href="#" class="button color">@Resources.Common.SubmitReview</a>
                        <div class="clearfix"></div>

                    </form>
                </div>

            </section>

        </div>

    </div>
