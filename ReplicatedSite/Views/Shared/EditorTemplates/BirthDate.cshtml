@model DateTime
@{
    Layout = "~/Views/Shared/EditorTemplates/_FormField.cshtml";

    var htmlAttributes = Html.GetEditorHtmlAttributes(new
    {
        @class = "form-control"
    });
}

<div class="row">
    <div class="col-sm-6">
        @Html.DropDownList("Month", Html.Months().Select(item => {
           item.Selected = Convert.ToInt32(item.Value) == Model.Month;
           return item;
        }), htmlAttributes)
    </div>
    <div class="col-sm-2">
        @Html.DropDownList("Day", Html.Days().Select(item => {
           item.Selected = Convert.ToInt32(item.Value) == Model.Day;
           return item;
        }), htmlAttributes)
    </div>
    <div class="col-sm-4">
        @Html.DropDownList("Year", Html.Years(DateTime.Now.AddYears(-18).Year, 80).Select(item => {
           item.Selected = Convert.ToInt32(item.Value) == Model.Year;
           return item;
       }), htmlAttributes)
    </div>
</div>