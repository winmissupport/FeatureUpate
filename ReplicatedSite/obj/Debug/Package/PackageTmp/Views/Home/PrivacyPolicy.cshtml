
@{
    ViewBag.Title = "Privacy Policy";
    ViewBag.Meta = "WIN has created this privacy statement in order to demonstrate our firm commitment to privacy.";
}

<div id="view-privacy">
    <section class="titlebar">
        <div class="container">

                <h2>@ViewBag.Title</h2>

                <nav id="breadcrumbs">
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li>@ViewBag.Title</li>
                    </ul>
                </nav>

        </div>
    </section>

    <!-- Blockquote
