@model EnrollmentPropertyBag
@{
    var contextID = Guid.NewGuid();
}

<div id="view-personalinformation-@contextID">

    <div class="row margin-5">
        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                @Html.EditorFor(c => c.Customer.FirstName)
            </div>
        </div>

        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                @Html.EditorFor(c => c.Customer.LastName)
            </div>
        </div>
    </div>

    <div class="space-5"></div>
    <div class="row margin-5">
        <div class="col-xs-12">
            <div class="form-group">

                <label class="control-label">Birthday</label>
                <div class="row margin-5">
                    <div class="col-sm-12 col-md-4">
                        <div class="form-group">
                            @Html.DropDownList("Customer.BirthMonth", Html.Months(), new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-4">
                        <div class="form-group">
                            @Html.DropDownList("Customer.BirthDay", Html.Days(), new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-4">
                        <div class="form-group">
                            @Html.DropDownList("Customer.BirthYear", Html.BirthYears(), new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                @*@Html.EditorFor(c => c.Customer.BirthDate)*@
            </div>
        </div>
    </div>
    <div class="space-5"></div>

    <div class="row margin-5">
            <div class="col-xs-12">
                <div class="form-group">
                    @Html.EditorFor(c => c.Customer.Company)
                </div>
            </div>
        </div>

    <div class="row margin-5">
        <div class="col-sm-6 col-md-3">
            <div class="form-group">
                @Html.EditorFor(c => c.Customer.PrimaryPhone)
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="form-group">
                @Html.EditorFor(c => c.Customer.SecondaryPhone)
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="form-group">
                @Html.EditorFor(c => c.Customer.MobilePhone)
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="form-group">
                @Html.EditorFor(c => c.Customer.Fax)
            </div>
        </div>
    </div>
    <div class="space-5"></div>   
        <div class="row margin-5">
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    @Html.EditorFor(c => c.Customer.TaxID)
                </div>
            </div>
        </div>
        <div class="space-5"></div>
    
    <div class="row margin-5">
        <div class="col-sm-12 col-md-6">
            <div class="form-group">
                @Html.EditorFor(c => c.Customer.LanguageID)
            </div>
        </div>
    </div>
    <div class="space-5"></div>

    <div class="row margin-5">
        <div class="col-sm-12 col-md-6">
            <div class="form-group">
              @Html.EditorFor(c => c.Customer.Email)
            </div>
        </div>
    </div>

    <div class="row margin-5">
        <div class="col-xs-12">
            <div class="form-group">  
                <div class="checkbox">
                    <label for="@Html.IdFor(c => c.Customer.IsOptedIn)">
                        @Html.CheckBoxFor(c => c.Customer.IsOptedIn) @Resources.Common.EmailPromo
                    </label>
                </div>
            </div>
        </div>
    </div>

</div>

@using (Html.BeginPartialScript())
{

    <script>
        require(["extensions"], function () {

            // Settings
            var context = "#view-personalinformation-@contextID",
                    $context = $(context);


            // Event Handlers
            function registerEventHandlers() {
                $('[data-toggle="popover"]', $context).popover();

            }


            // Actions
            var actions = {

            };


            // Helpers
            var helpers = {

            };


            // Initialization
            function init() {
                registerEventHandlers();
            }
            init();

        });
    </script>
}